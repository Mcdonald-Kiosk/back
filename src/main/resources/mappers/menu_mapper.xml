<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.mcdonaldkiosk.mapper.MenuMapper">

    <resultMap id="menuResultMap" type="com.korit.mcdonaldkiosk.entity.Menu">
        <id property="menuId" column="m.menu_id" />
        <result property="menuName" column="m.menu_name" />
        <result property="menuCategory" column="m.menu_category" />
        <result property="menuSequence" column="m.menu_sequence" />
        <result property="singleImg" column="m.single_img" />
        <result property="setImg" column="m.set_img" />
        <result property="isExposure" column="m.is_exposure" />

        <!-- db에서 계산식 적용 -->
        <!-- menuPrice 속성을 menuPriceResultMap과 연결 -->
        <collection property="menuPrice" resultMap="menuPriceResultMap"/>
    </resultMap>

    <resultMap id="menuPriceResultMap" type="com.korit.mcdonaldkiosk.entity.MenuPrice">
        <id property="menuPriceId" column="mp.menu_price_id" />
        <result property="menuId" column="mp.menu_id" />
        <result property="size" column="mp.size" />
        <result property="menuPrice" column="mp.menu_price" />
        <result property="discountPrice" column="mp.discount_price" />
    </resultMap>

    <select id="selectAllMenus" resultMap="menuResultMap">
        SELECT
            m.menu_id,
            m.menu_name,
            m.menu_category,
            m.menu_sequence,
            m.single_img,
            m.set_img,
            m.is_exposure,

            mp.menu_id AS mp_menu_id,
            mp.size,
            mp.menu_price,
            mp.discount_price
        FROM
            menu_tb m
            LEFT OUTER JOIN menu_price_tb mp ON m.menu_id = mp.menu_id
    </select>

    <!--  메뉴 추가  -->
    <insert id="insertMenu" useGeneratedKeys="true" keyProperty="menuId">
        INSERT INTO
            menu_tb (
                menu_name,
                menu_category,
                menu_sequence,
                single_img,
                set_img,
                is_exposure
            )
        VALUES
            (
                #{menuName},
                #{menuCategory},
                #{menuSequence},
                #{singleImg},
                #{setImg},
                #{isExposure}
            );
    </insert>

</mapper>